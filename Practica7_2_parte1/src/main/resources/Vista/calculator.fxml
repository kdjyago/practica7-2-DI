<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="rootVBox" alignment="CENTER" prefHeight="311.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controlador.controladorCALCU">
    <TextField fx:id="displayField" alignment="CENTER_RIGHT" editable="false" maxHeight="60.0" maxWidth="215.0" minHeight="39.0" minWidth="60.0" prefHeight="39.0" prefWidth="215.0" VBox.vgrow="NEVER">
        <VBox.margin>
            <Insets bottom="10.0" top="10.0" />
        </VBox.margin></TextField>
    <HBox alignment="CENTER" spacing="5.0">
        <Button fx:id="btn7" mnemonicParsing="false" prefHeight="60.0" prefWidth="50.0" text="7" onAction="#addToDisplay"/>
        <Button fx:id="btn8" mnemonicParsing="false" prefHeight="60.0" prefWidth="50.0" text="8" onAction="#addToDisplay"/>
        <Button fx:id="btn9" mnemonicParsing="false" prefHeight="60.0" prefWidth="50.0" text="9" onAction="#addToDisplay"/>
        <Button fx:id="btnDivide" mnemonicParsing="false" prefHeight="60.0" prefWidth="50.0" text="/" onAction="#processOperator"/>
    </HBox>
    <HBox alignment="CENTER" spacing="5.0">
        <Button fx:id="btn4" mnemonicParsing="false" prefHeight="60.0" prefWidth="50.0" text="4" onAction="#addToDisplay"/>
        <Button fx:id="btn5" mnemonicParsing="false" prefHeight="60.0" prefWidth="50.0" text="5" onAction="#addToDisplay"/>
        <Button fx:id="btn6" mnemonicParsing="false" prefHeight="60.0" prefWidth="50.0" text="6" onAction="#addToDisplay"/>
        <Button fx:id="btnMultiply" mnemonicParsing="false" prefHeight="60.0" prefWidth="50.0" text="*" onAction="#processOperator"/>
    </HBox>
    <HBox alignment="CENTER" spacing="5.0">
        <Button fx:id="btn1" mnemonicParsing="false" prefHeight="60.0" prefWidth="50.0" text="1" onAction="#addToDisplay"/>
        <Button fx:id="btn2" mnemonicParsing="false" prefHeight="60.0" prefWidth="50.0" text="2" onAction="#addToDisplay"/>
        <Button fx:id="btn3" mnemonicParsing="false" prefHeight="60.0" prefWidth="50.0" text="3" onAction="#addToDisplay"/>
        <Button fx:id="btnSubtract" mnemonicParsing="false" prefHeight="60.0" prefWidth="50.0" text="-" onAction="#processOperator"/>
    </HBox>
    <HBox alignment="CENTER" spacing="5.0">
        <Button fx:id="btn0" mnemonicParsing="false" prefHeight="60.0" prefWidth="50.0" text="0" onAction="#addToDisplay"/>
        <Button fx:id="btnDecimal" mnemonicParsing="false" prefHeight="60.0" prefWidth="50.0" text="." onAction="#addToDisplay"/>
        <Button fx:id="btnEquals" mnemonicParsing="false" prefHeight="60.0" prefWidth="50.0" text="=" onAction="#processOperator"/>
        <Button fx:id="btnAdd" mnemonicParsing="false" prefHeight="60.0" prefWidth="50.0" text="+" onAction="#processOperator"/>
    </HBox>
    <HBox alignment="CENTER" spacing="5.0">
        <Button fx:id="btnReset" mnemonicParsing="false" text="Reset" onAction="#reset"/>
        <VBox.margin>
            <Insets bottom="10.0" />
        </VBox.margin>
    </HBox>
</VBox>